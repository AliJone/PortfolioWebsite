<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>DevBlog - Ali Jone's Personal Blog</title>

  <!--
    - favicon
  -->
  <link rel="shortcut icon" href="./public/images/favicon.ico" type="image/x-icon">

  <!--
    - custom css link
  -->
  <link rel="stylesheet" href="./public/css/style.css">

  <!--
    - google font link
  -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400;500;600;700;800;900&display=swap"
    rel="stylesheet">
    <style>
      html{scroll-behavior:smooth}
      .logo-light{
        width: 70px !important;
      }
      .logo-dark{
        width: 70px !important;
      }
      footer{
        padding-top: 20px;
        padding-bottom: 20px;
      }
      footer a img{
        display: block ;
        margin: auto !important;
      }
      footer a{
        display: block ;
        margin: auto !important;
      }
      .typed-out{
        display: inline-block;
  overflow: hidden;
  white-space: nowrap;
  /* animation-iteration-count: infinite; */
  animation: 
    typing 3s infinite;
  width: 0;
}
@keyframes typing {
  from { width: 0 }
  to { width: 100% }
}
.hero .h1 {
     margin-bottom: 0; 
}
    </style>
</head>

<body class="dark-theme">


  <header>

    <div class="container">

      <nav class="navbar">

        <a href="index.html">
          <img src="./public/images/logo-light.png" alt="AliJone logo" width="150" class="logo-light">
          <img src="./public/images/logo-dark.png" alt="AliJone logo" width="150" class="logo-dark">
        </a>

        <div class="btn-group">

          <button class="theme-btn theme-btn-mobile light">
            <ion-icon name="moon" class="moon"></ion-icon>
            <ion-icon name="sunny" class="sun"></ion-icon>
          </button>

          <button class="nav-menu-btn">
            <ion-icon name="menu-outline"></ion-icon>
          </button>

        </div>

        <div class="flex-wrapper">

          <ul class="desktop-nav">

            <li>
              <a href="#" class="nav-link">Home</a>
            </li>

            <li>
              <a href="#blog" class="nav-link">Projects</a>
            </li>

            <li>
              <a href="contact.html" class="nav-link">Contact</a>
            </li>

          </ul>

          <button class="theme-btn theme-btn-desktop light">
            <ion-icon name="moon" class="moon"></ion-icon>
            <ion-icon name="sunny" class="sun"></ion-icon>
          </button>

        </div>

        <div class="mobile-nav">

          <button class="nav-close-btn">
            <ion-icon name="close-outline"></ion-icon>
          </button>

          <div class="wrapper">

            <p class="h3 nav-title">Main Menu</p>

            <ul>
              <li class="nav-item">
                <a href="#" class="nav-link">Home</a>
              </li>

              <li class="nav-item">
                <a href="#blog" class="nav-link">Projects</a>
              </li>

              <li class="nav-item">
                <a href="#" class="nav-link">Contact</a>
              </li>
            </ul>

          </div>
        </div>

      </nav>

    </div>

  </header>





  <main>


    <div class="hero">

      <div class="container">

        <div class="left">
          

          <h1 class="h1">
            Hi, I'm <b>Ali&nbsp;Jone</b>.
            <br> <p class="typed-out" id="typed-out">Web Developer</p> 
          </h1>

          <p class="h2" style="
          padding-block-end: 1rem;
      ">
            Welcome to my website
          </p>

          <div class="btn-group">
            <a href="/contact.html" class="btn btn-primary">Contact Us</a>
            <a href="#blog" class="btn btn-secondary">Projects</a>
          </div>

        </div>

        <div class="right">

          <div class="pattern-bg"></div>
          <div class="img-box">
            <img src="./public/images/hero.png" alt="Ali Jone" class="hero-img">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
          </div>

        </div>

      </div>

    </div>





    <div class="main" id="blog">

      <div class="container">


        <div class="blog ">

          <h2 class="h2">Latest Projects</h2>

          <div class="blog-card-group">
            <% if(projects.length>0) {%> 
              <% projects.forEach(project => {%> 
            <div class="blog-card">

              <div class="blog-card-banner">
                <img src="<%= project.imgURL %> " alt="<%= project.altname %> "
                  width="250" class="blog-banner-img">
              </div>

              <div class="blog-content-wrapper">

                <button class="blog-topic text-tiny"><%= project.projTech %> </button>

                <h3>
                  <a href="<%= project.projURL %> " target=”_blank” class="h3">
                    <%= project.projName %> 
                  </a>
                </h3>

                <p class="blog-text">
                  <%= project.projText %> 
                </p>

                <div class="wrapper-flex">

                  <div class="profile-wrapper">
                    <img src="./public/images/author.png" alt="Ali Jone" width="50">
                  </div>

                  <div class="wrapper">
                    <a href="#" class="h4">Ali Jone</a>

                    <p class="text-sm">
                      <time datetime="2022-01-17"><%= project.date %> </time>
                      <span class="separator"></span>
                      <ion-icon name="time-outline"></ion-icon>
                    </p>
                  </div>

                </div>

              </div>

            </div>
            <% }) %> 
            <% } %> 

          </div>

          <button class="btn load-more">Load More</button>

        </div>





        <!--
          - ASIDE
        -->

        <div class="aside">

          <div class="topics">

            <h2 class="h2">Topics</h2>

            <a class="topic-btn">
              <div class="icon-box">
                <ion-icon name="server-outline"></ion-icon>
              </div>

              <p>Database</p>
            </a>

            <a class="topic-btn">
              <div class="icon-box">
                <ion-icon name="accessibility-outline"></ion-icon>
              </div>

              <p>Accessibility</p>
            </a>

            <a class="topic-btn">
              <div class="icon-box">
                <ion-icon name="rocket-outline"></ion-icon>
              </div>

              <p>Web Performance</p>
            </a>

          </div>

          <div class="tags">

            <h2 class="h2">Tags</h2>

            <div class="wrapper">

              <button class="hashtag">#mongodb</button>
              <button class="hashtag">#nodejs</button>
              <button class="hashtag">#a11y</button>
              <button class="hashtag">#mobility</button>
              <button class="hashtag">#inclusion</button>
              <button class="hashtag">#webperf</button>
              <button class="hashtag">#optimize</button>
              <button class="hashtag">#performance</button>

            </div>

          </div>

          <div class="contact">

            <h2 class="h2">Let's Talk</h2>

            <div class="wrapper">

              <p>
                Do you want to learn more about how I can help your company overcome problems? Let us have a
                conversation.
              </p>

              <ul class="social-link">

                <li>
                  <a href="https://discordapp.com/users/3502/" target="_blank" class="icon-box discord">
                    <ion-icon name="logo-discord"></ion-icon>
                  </a>
                </li>

                <li>
                  <a href="https://pk.linkedin.com/in/ali-jone-16190b1a9" target="_blank" class="icon-box twitter">
                    <ion-icon name="logo-linkedin"></ion-icon>
                  </a>
                </li>

                <li>
                  <a href="https://www.facebook.com/alijone.merchant" target="_blank" class="icon-box facebook">
                    <ion-icon name="logo-facebook"></ion-icon>
                  </a>
                </li>

              </ul>

            </div>

          </div>

          <div class="newsletter">

            <h2 class="h2">Newsletter</h2>

            <div class="wrapper">

              <p>
                Subscribe to our newsletter to be among the first to keep up with the latest updates.
              </p>

              <form action="#">
                <input type="email" name="email" placeholder="Email Address" required>

                <button type="submit" class="btn btn-primary">Subscribe</button>
              </form>

            </div>

          </div>

        </div>

      </div>

    </div>

  </main>







  <footer>



        <a href="index.html" class="footer-logo">
          <img src="./public/images/logo-light.png" alt="DevBlog's Logo" width="150" class="logo-light">
          <img src="./public/images/logo-dark.png" alt="DevBlog's Logo" width="150" class="logo-dark">
        </a>

       
  </footer>





  <!--
    - custom js link
  -->
  <script src="./public/js/script.js"></script>

  <!--
    - ionicon link
  -->
  <script>
    let ind = 0;
    const position = document.querySelector('.typed-out');
    const work = ['Web Developer', 'AI Enthusiast', 'Student'];
    console.log(position.innerHTML);
    typewriter = () => {
      if(ind == work.length-1){
        ind = -1;
      }
      ind++;
      position.innerHTML = work[ind];

      
    }

    setInterval(typewriter, 3000);

  </script>
  <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>

</html>